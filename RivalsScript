GetKey.TextColor3 = Color3.fromRGB(150, 150, 150)
GetKey.Parent = Frame

local GetKeyCorner = Instance.new("UICorner")
GetKeyCorner.CornerRadius = UDim.new(0, 5)
GetKeyCorner.Parent = GetKey

local CheckKey = Instance.new("TextButton")
CheckKey.Size = UDim2.new(0.35, 0, 0.15, 0)
CheckKey.Position = UDim2.new(0.55, 0, 0.7, 0)
CheckKey.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
CheckKey.Text = "Check Key"
CheckKey.TextSize = 18
CheckKey.TextColor3 = Color3.fromRGB(150, 150, 150)
CheckKey.Parent = Frame

local CheckKeyCorner = Instance.new("UICorner")
CheckKeyCorner.CornerRadius = UDim.new(0, 5)
CheckKeyCorner.Parent = CheckKey

GetKey.MouseButton1Click:Connect(function()
   if setclipboard then
      setclipboard("https://link-center.net/1302195/rivals-key")
   end
end)

local function validateKey(key)
    return key == "Rivlas-DDAA-83QJ-DH83" -- Replace this with your actual key
end

CheckKey.MouseButton1Click:Connect(function()
    local enteredKey = TextBox.Text
    if validateKey(enteredKey) then
        TextBox.Text = "Correct Key!"
        task.wait(1)
        TextBox.Text = ""

        -- Load your script after a short delay
        task.spawn(function()
            loadstring(game:HttpGet("https://raw.githubusercontent.com/8bits4ya/rivals-v3/refs/heads/main/main.lua"))()
            task.wait(1) -- Ensure script starts before GUI disappears
            ScreenGui:Destroy()
        end)
    else
        TextBox.Text = "Invalid key. Try again."
        task.wait(1)
        TextBox.Text = ""
    end
end)
